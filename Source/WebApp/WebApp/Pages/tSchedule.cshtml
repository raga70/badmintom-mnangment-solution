@page
@model WebApp.Pages.tSchedule

@{
}

<table class="table">
    <thead class="thead-dark">
    <tr>
    <th scope="col">#</th>
        <th scope="col">Player1</th>
        <th scope="col"> </th>
        <th scope="col">Player2</th>
    </tr>
    </thead>    
    <tbody>
    @foreach(var r in Model.Rounds)
    {
        <tr>
            <th scope="row">@r.RoundNumber</th>
        </tr>
        <tr>
            @foreach (var f in r.Fights)
            {
                @if(f.isB == false)  {
                    <td> </td>
                    <td>@f.Player1.Player.firstName ,  @f.Player1.Player.lastName</td>
                    <td>vs</td>
                    <td>@f.Player2.Player.firstName ,  @f.Player2.Player.lastName</td>
                
                }
            }
        </tr>
        
    }
    </tbody>
    
</table>